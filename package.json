{
  "name": "bulk-github-copilot-agent-config",
  "version": "1.0.0",
  "description": "A tool to automate bulk configuration of GitHub Copilot agent MCP settings across personal repositories",
  "main": "dist/index.js",
  "bin": {
    "copilot-config": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/cli.ts",
    "configure": "npm run build && node dist/cli.js",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "start": "node dist/cli.js"
  },
  "keywords": [
    "github",
    "copilot",
    "mcp",
    "automation",
    "bulk-configuration"
  ],
  "author": "Raymond Lowe",
  "license": "MIT",
  "dependencies": {
    "commander": "^11.1.0",
    "js-yaml": "^4.1.0",
    "playwright": "^1.40.0",
    "winston": "^3.11.0",
    "chalk": "^4.1.2",
    "ora": "^5.4.1",
    "fs-extra": "^11.1.1"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.8",
    "@types/node": "^20.9.0",
    "@types/fs-extra": "^11.0.4",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}